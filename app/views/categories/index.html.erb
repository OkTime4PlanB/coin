<h1 class="title is-4">Categories</h1>

<table class="table is-hoverable is-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Total</th>
      <th>Total Current</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.total %></td>
        <td><%= "#{Spending.where(created_at: Date.today.all_month).where(category: category.id).sum(:price)} â‚¬" %></td>
        <td><%= link_to 'Show', category, class: "button is-info is-small" %></td>
        <td><%= link_to 'Edit', edit_category_path(category), class: "button is-dark is-small", class: "button is-dark is-small" %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "button is-danger is-small" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


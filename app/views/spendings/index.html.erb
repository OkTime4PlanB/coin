<br>
<h1 class="title">Spendings</h1>

<table class="table is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th>User</th>
      <th>Category</th>
      <th>Name</th>
      <th>Price</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spendings.each do |spending| %>
      <tr>
        <td><%= spending.user_id %></td>
        <td><%= spending.category_id %></td>
        <td><%= spending.name %></td>
        <td><%= spending.price %></td>
        <td><%= spending.amount %></td>
        <td><%= link_to 'Show', user_spending_path(spending.user, spending) %></td>
        <td><%= link_to 'Edit', edit_user_spending_path(spending.user, spending) %></td>
        <td><%= link_to 'Destroy', user_spending_path(spending.user, spending), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Spending', new_user_spending_path, class: "button" %>
